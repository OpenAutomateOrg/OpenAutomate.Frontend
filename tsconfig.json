{
  "compilerOptions": {
    "target": "ES2017",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    // Strict TypeScript configuration - match production behavior
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,

    // Enhanced strict checks to catch critical issues early
    "noUnusedLocals": false, // Keep false to avoid too many errors initially
    "noUnusedParameters": false, // Keep false to avoid too many errors initially
    "exactOptionalPropertyTypes": false, // Keep false for compatibility
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "noUncheckedIndexedAccess": true, // This catches the null/undefined issues we fixed
    "noImplicitOverride": false, // Keep false for now
    "noPropertyAccessFromIndexSignature": true, // This caught our env variable issue

    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/*": ["./src/*"]
    }
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", ".next/types/**/*.ts"],
  "exclude": ["node_modules"]
}
